{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Intent",
  "type": "object",
  "required": [
    "id",
    "statement",
    "date"
  ],
  "properties": {
    "id": {
      "type": "string"
    },
    "date": {
      "type": "string",
      "format": "date"
    },
    "statement": {
      "type": "string"
    },
    "constraints": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "success_criteria": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  }
}